/* pages/activity/activity.wxss */
/* 搜索框样式 */
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  height: 60rpx;
  background-color: whitesmoke;
  margin-top: 5%;
  margin-left: 10%;
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
}
/* 搜索框提示文字样式 */
.search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

/* 搜索框小图标 */
.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}

/* 加号小图标 */
.add_icon{
  position: fixed;
  width:50px;
  height:55px;
  bottom: 30px;
  right: 20px;
}

.cal{font-size: larger;
  color: blueviolet;
  display: flex;
  vertical-align: center; 
  justify-content: center;
  margin-top: 10%;
  font-weight: bold;
  font-style: italic;
}

.out {
  width: 100%;
  justify-content: space-around;
  }

.out scroll-view{
    height: 180px;
  }
  
.out .item {
  height: 100px;
  margin: 10px;
  }

.topic {
    border: gray 1rpx solid;
  }

.ttl {
    font-size: larger;
    color: rgb(23, 90, 233);
    display: flex;
    font-weight: bold;
  }